header#menu.menu.fixed.top0.left0.fullW
	nav.fullW.fullH
		- topsections = topsections.data;

		//- each topsection in topsections
			//- h1= topsection.id
				- var prefix = 'DKT__' ;
				- topsection.cleanname = t( prefix + topsection.post.name + '.name') ;
				- topsection.surname = t( prefix + topsection.post.name + '.surname')
				- topsection.cleanlink = '/#/' + lang + topsection.path ;

				if(topsection.children)
					each ch in topsection.children
						- ch.cleanname = t( prefix + topsection.post.name + '.' + topsection.post.name + '.' + ch.post.name + '.name') ;
						- ch.surname = t( prefix + topsection.post.name + '.' + topsection.post.name + '.' + ch.post.name + '.surname') ;
						- ch.cleanlink = '/#/' + lang + ch.path ;

		- t = function(str){return str} ;
		//- MAIN NAV SECTION LINKS
		ol.sectionsnav.flowvisible.fullH.context
			- var other = [].concat(topsections) ;
			- var home = other.shift() ;

			//-  HOME SPECIAL CASE
			li.home.floatL.left0.sizeLg.RmarXXXXLg(id= "global_" + 'home', class= "global_" + 'home')
				//-a.block.fullW.fullH(href= '/#/' + lang + '/home/')
				a.block.fullW.fullH(href= '#/home/purechain/')
					span.hidden= t('MMAI')

			+log(topsections) ;

			//-  OTHERS CASE
			each navsection in other
				- var name = navsection.name ;
				li.others.floatL.rel.LmarSm(id= "global_" + name, class= "global_" + name, style="left:-20px")
					a.block.Hpad.fullH.inconsolata(href= '#/' + name + '/')
						span.sizeLg= name
					//- if(0)
						ol.subnav.abs.txtR.left0.round.right.flowhidden(style="top:4em;width:400px")
							- var cat = "" ;
							each navchild, i in navsection.children
								- var chname = navchild.cleanname ;
								- var chcat = navchild.category.name ;
								li.sub.rel(class="navmenu_" + navchild.name )
									if(chcat !== cat)
										.abs.left0.padXXSm.sizeSm.Hpad.inconsolata.dkt.dark.whiteBG.uppercase(style="top:3px;border-bottom:1px solid #e3dcd5")= chcat
									- cat = chcat ;
									a.block.padXXSm.Hpad.inconsolata(href= '/#/' + lang + '/' + name + '/' + navchild.name + '/')
										span= '> ' + chname
		
		
		//- LAGUAGE BAR
			ul#langnav.langnav.context.floatR.mar.VpadXXXSm.none
				each language in langs
					- var active = language.code == lang ? ' active ' : '' ;
					li.floatL(id= "lang_" + language.code, class= "lang " + active + "lang_" + language.code)
						a.block.HpadXSm.inconsolata.round.both(href='?lng=' + language.code, lang=language.code)
							span= language.code
		.abs.downloadwallet.right0(style="top:12px")
			.language.floatL
				a.block.black.padXXSm.Hpad(style="" href="javascript:void(0)")
					+language() 
			.download.floatL
				a.block.Rmar.TmarXSm.padXSm.HpadXLg.round23.purecolorBG.white(href="#/wallet/")
					span DOWNLOAD WALLET
		.abs.top100.left0.right0.graddown(style="height:15px") <!-- -->


